<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
	  <%= render 'shared/error_messages' %>
		
      <%= f.label :first_name %>
      <%= f.text_field :first_name, placeholder: "FirstName" %>

      <%= f.label :last_name %>
      <%= f.text_field :last_name, placeholder: "LastName" %>

      <%= f.label :email %>
      <%= f.text_field :email, placeholder: "example@example.com" %>

	  <%= f.label :phone_number %>
	  <%= f.text_field :phone_number, placeholder: "555-555-5555" %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
	  
	  <% @companies = Company.all %>
	  <% @company = Company.new(id: '-1', name: "add a company") %>
	  <% @companies.unshift @company %>
	  <%= label_tag 'user[company_id]', 'Company' %>
	  <%= select_tag 'user[company_id]', options_from_collection_for_select(@companies, "id", "name"),
	  				 prompt: "Select a Company", onChange: 'javascript: onCompanyChanged(this);' %>

	  <%= render 'company_form'%>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>